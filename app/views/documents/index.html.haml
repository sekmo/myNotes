.wrapper-with-padding
  .document-index.clearfix
    - unless @documents.blank?
      %h1.page-title All your notes
      - @documents.each do |document|
        .document-index__document
          .document-index__document__date= time_ago_in_words(document.created_at)
          .document-index__document__content
            %a{ href: (url_for document) }
              %p.document-index__document__content__title= document.title
              %p.document-index__document__content__excerpt= truncate(document.content, length: 50)
          .document-index__document__actions
            =link_to fa_icon("eye"), document, title: 'View entry'
            =link_to fa_icon("pencil"), edit_document_path(document), title: 'Edit entry'
            =link_to fa_icon("trash-o"), document, method: :delete, data: { confirm: 'Are you sure to delete the entry?' }, title: 'Delete entry'
    - else
      %h2 Welcome to MyNotes!
      %p Why don't you start creating a new note?
      %button= link_to "New Document", new_document_path, class: 'button'
