.wrapper_with_padding
  #document_show
    %h1.title= @document.title
    %p= simple_format @document.content

    .buttons
      = link_to 'All documents', documents_path
      = link_to 'Edit document', edit_document_path(@document)
      = link_to 'Delete document', method: :delete, data: { confirm: 'Are you sure?' }
